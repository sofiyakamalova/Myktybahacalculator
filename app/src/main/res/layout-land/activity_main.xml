<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/shownum"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="0"
        android:textSize="20sp"
        android:gravity="right"
        android:paddingRight="10dp"
        />

    <TextView
        android:id="@+id/tv_san"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="right"
        android:paddingRight="10dp"
        android:text="0"
        android:textSize="20sp"
        android:textColor="@color/dark_blue"/>



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:orientation="horizontal">
        <Button
            android:id="@+id/removeC"
            style="@style/button_number_style2"
            android:text="C" />
        <Button
            android:id="@+id/btnplusminus"
            style="@style/button_number_style2"
            android:text="+/-" />

        <Button

            style="@style/button_number_style2"
            android:text="%" />
        <Button
            android:id="@+id/btnbolu"
            style="@style/button_number_style2"
            android:text="/" />

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:orientation="horizontal">
        <Button
            android:id="@+id/btn7"
            style="@style/button_number_style"
            android:text="7" />

        <Button
            android:id="@+id/btn8"
            style="@style/button_number_style"
            android:text="8" />
        <Button
            android:id="@+id/btn9"
            style="@style/button_number_style"
            android:text="9" />
        <Button
            android:id="@+id/btnX"
            style="@style/button_number_style2"
            android:text="X" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:orientation="horizontal">
        <Button
            android:id="@+id/btn4"
            style="@style/button_number_style"
            android:text="4" />
        <Button
            android:id="@+id/btn5"
            style="@style/button_number_style"
            android:text="5" />
        <Button
            android:id="@+id/btn6"
            style="@style/button_number_style"
            android:text="6" />

        <Button
            android:id="@+id/btnminus"
            style="@style/button_number_style2"
            android:text="-" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:orientation="horizontal">
        <Button
            android:id="@+id/btn1"
            style="@style/button_number_style"
            android:text="1" />
        <Button
            android:id="@+id/btn2"
            style="@style/button_number_style"
            android:text="2" />
        <Button
            android:id="@+id/btn3"
            style="@style/button_number_style"
            android:text="3" />

        <Button
            android:id="@+id/btnplus"
            style="@style/button_number_style2"
            android:text="+" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:orientation="horizontal">
        <Button
            android:id="@+id/btn0"
            style="@style/button_number_style"
            android:text="0" />
        <Button
            style="@style/button_number_style"
            android:text="." />

        <Button
            android:id="@+id/btnten"
            app:backgroundTint="@color/dark_blue"
            style="@style/button_number_style3"
            android:text="=" />

    </LinearLayout>
</LinearLayout>